<resources>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_nano</item>
        <item name="android:layout_marginEnd">@dimen/padding_nano</item>
        <item name="android:layout_marginTop">@dimen/padding_micro</item>
        <item name="android:layout_marginBottom">@dimen/padding_micro</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
    </style>

    <!--Stateful layout related styles-->
    <style name="stfImage">
        <item name="android:layout_width">@dimen/stfImageSize</item>
        <item name="android:layout_height">@dimen/stfImageSize</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="stfMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_standard</item>
        <item name="android:layout_marginRight">@dimen/padding_standard</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/stateful_layout_text_size</item>
    </style>

</resources>
